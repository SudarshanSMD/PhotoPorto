@model PhotoPorto.Models.Gallery

@{
    ViewBag.Title = "Gallery";
}
<link href="@Url.Content("~/Content/thumbnail-gallery.css")" rel="stylesheet" type="text/css" />


@*<p>
            @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
            @Html.ActionLink("Back to List", "Index")
    </p>*@

<!-- Page Content -->
<div class="container">

    <div class="row">

        <div class="col-lg-12">
            <h1>@Model.Title <small>@Model.Description</small></h1>
        </div>

        @foreach (var photograph in Model.Photographs)
        {
            <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                @*<a class="thumbnail" href='@Url.Action("Details", "Photographs", new { id = photograph.ID})'>*@
                <a class="thumbnail" href='@Url.RouteUrl("Galleries_GalleryId_Photographs_PhotographId_Route", new { id = photograph.ID, galleryId = Model.ID})'>
                    <img src='~/photograph/@photograph.ID/@(photograph.ID+".jpg")' alt="@photograph.Title" />
                </a>
            </div>
        }
    </div>
</div>


@*refered from: https://github.com/BlackrockDigital/startbootstrap-thumbnail-gallery*@
